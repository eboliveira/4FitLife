<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/navigation_day">

  <fragment
    android:id="@+id/navigation_day"
    android:name="com.github.fourfitlife.ui.day.DayFragment"
    android:label="@string/day_title"
    tools:layout="@layout/fragment_day" />

  <fragment
    android:id="@+id/navigation_week"
    android:name="com.github.fourfitlife.ui.week.WeekFragment"
    android:label="@string/week_title"
    tools:layout="@layout/fragment_week" />

  <fragment
    android:id="@+id/navigation_month"
    android:name="com.github.fourfitlife.ui.month.MonthFragment"
    android:label="@string/month_title"
    tools:layout="@layout/fragment_month" />
</navigation>
